{
    "name": "mage-context/compiler",
    "description": "CLI tool that indexes a Magento repo via static analysis and outputs an AI-ready context bundle",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "nikic/php-parser": "^5.7",
        "symfony/console": "^8.0",
        "symfony/finder": "^8.0",
        "symfony/process": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "MageContext\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MageContext\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/magecontext",
        "bin/context-compiler"
    ],
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^13.0"
    }
}
