{
    "name": "mage-context/compiler",
    "description": "CLI tool that indexes a Magento repo via static analysis and outputs an AI-ready context bundle",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "symfony/console": "^6.0|^7.0",
        "symfony/process": "^6.0|^7.0",
        "symfony/finder": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "MageContext\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MageContext\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/context-compiler"
    ],
    "config": {
        "sort-packages": true
    }
}
